// Note: *very* slow analysis with no buffers partitioning abstraction

latest = 0, reading = 0,
data00 = 0, data01 = 0, data10 = 0, data11 = 0,
slot0 = 0, slot1 = 0

#### THREAD WRITER ####

while true {

    // pair_w := not reading

    pair_w := 1 - reading

    // index_w := not slot[pair_w]

    if pair_w = 0 {
       index_w := 1 - slot0
    }

    if pair_w = 1 {
       index_w := 1 - slot1
    }

    // data[pair_w][index_w] := in /* Critical sections */

    if pair_w = 0 && index_w = 0 {
       label crit00
       data00 := in
    }

    if pair_w = 0 && index_w = 1 {
       label crit01
       data01 := in
    }

    if pair_w = 1 && index_w = 0 {
       label crit10
       data10 := in
    }

    if pair_w = 1 && index_w = 1 {
       label crit11
       data11 := in
    }

    // slot[pair_w] := index_w

    if pair_w = 0 {
       slot0 := index_w
    }

    if pair_w = 1 {
       slot1 := index_w
    }

    // latest := pair_w

    latest := pair_w
    mfence

}

#### THREAD READER ####

while true {

    // pair_r := latest

    pair_r := latest

    // reading := pair_r

    reading := pair_r
    mfence

    // index_r := slot[pair_r]

    if pair_r = 0 {
       index_r := slot0
    }

    if pair_r = 1 {
       index_r := slot1
    }

    // out := data[pair_r][index_r] /* Critical sections */

    if pair_r = 0 && index_r = 0 {
       label crit00
       out := data00
    }

    if pair_r = 0 && index_r = 1 {
       label crit01
       out := data01
    }

    if pair_r = 1 && index_r = 0 {
       label crit10
       out := data10
    }

    if pair_r = 1 && index_r = 1 {
       label crit11
       out := data11
    }
}
